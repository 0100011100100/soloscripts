<body>
  <div class="sidebar">
    <h2>Settings</h2><button onclick=
    "showSection('accountSection')">Account</button>
    <button onclick=
    "showSection('appearanceSection')">Appearance</button>
    <button onclick=
    "showSection('notificationsSection')">Notifications</button>
    <button onclick=
    "showSection('languageSection')">Language</button>
    <button onclick="goBack()">Back to Dashboard</button>
  </div>
  <div class="container">
    <div id="accountSection" class="section">
      <h3>Account Settings</h3><input type="text" id=
      "passwordInput" placeholder="Update your password">
      <button class="apply" onclick="updatePassword()">Update
      Password</button>
    </div>
    <div id="appearanceSection" class="section" style=
    "display: none;">
      <h3>Appearance Settings</h3><select id="colorSelect">
        <option value="" disabled selected>
          Choose Background Color
        </option>
        <option value="#2c2f33">
          Dark
        </option>
        <option value="#23272a">
          Darker
        </option>
        <option value="#99aab5">
          Light Gray
        </option>
      </select> <button class="apply" onclick=
      "changeBackgroundColor()">Change Background Color</button>
      <select id="textSizeSelect">
        <option value="" disabled selected>
          Choose Text Size
        </option>
        <option value="14px">
          Small
        </option>
        <option value="16px">
          Medium
        </option>
        <option value="18px">
          Large
        </option>
      </select> <button class="apply" onclick=
      "changeTextSize()">Change Text Size</button> <select id=
      "themeSelect">
        <option value="" disabled selected>
          Select Theme
        </option>
        <option value="light">
          Light Theme
        </option>
        <option value="dark">
          Dark Theme
        </option>
      </select> <button class="apply" onclick=
      "changeTheme()">Change Theme</button>
    </div>
    <div id="notificationsSection" class="section" style=
    "display: none;">
      <h3>Notification Settings</h3><label><input type="checkbox"
      id="notificationToggle" checked> Enable Notifications</label>
      <button class="apply" onclick="toggleNotifications()">Toggle
      Notifications</button>
    </div>
    <div id="languageSection" class="section" style=
    "display: none;">
      <h3>Language Settings</h3><select id="languageSelect">
        <option value="" disabled selected>
          Select Language
        </option>
        <option value="en">
          English
        </option>
        <option value="es">
          Spanish
        </option>
        <option value="fr">
          French
        </option>
      </select> <button class="apply" onclick=
      "changeLanguage()">Change Language</button>
    </div>
    <div id="welcomeMessage"></div>
  </div>
  <script>
    function showSection(sectionId) {
        // Hide all sections
        const sections = document.querySelectorAll('.section');
        sections.forEach(section => {
            section.style.display = 'none';
        });
        // Show the selected section
        document.getElementById(sectionId).style.display = 'block';
    }

    function updatePassword() {
        const password = document.getElementById('passwordInput').value;
        if (password) {
            localStorage.setItem('password', password);
            alert('Password updated!');
        }
    }

    function changeBackgroundColor() {
        const color = document.getElementById('colorSelect').value;
        if (color) {
            document.body.style.backgroundColor = color;
            localStorage.setItem('backgroundColor', color);
        }
    }

    function changeTextSize() {
        const size = document.getElementById('textSizeSelect').value;
        if (size) {
            document.body.style.fontSize = size;
            localStorage.setItem('textSize', size);
        }
    }

    function changeTheme() {
        const theme = document.getElementById('themeSelect').value;
        if (theme) {
            if (theme === 'light') {
                document.body.style.backgroundColor = '#ffffff';
                document.body.style.color = '#000000';
            } else if (theme === 'dark') {
                document.body.style.backgroundColor = '#2c2f33';
                document.body.style.color = '#ffffff';
            }
            localStorage.setItem('theme', theme);
        }
    }

    function toggleNotifications() {
        const isEnabled = document.getElementById('notificationToggle').checked;
        localStorage.setItem('notificationsEnabled', isEnabled);
        alert(`Notifications are now ${isEnabled ? 'enabled' : 'disabled'}.`);
    }

    function changeLanguage() {
        const language = document.getElementById('languageSelect').value;
        if (language) {
            localStorage.setItem('language', language);
            alert(`Language changed to ${language}.`);
        }
    }

    function goBack() {
        window.location.href = 'googleclass.html';
    }

    // Load saved settings on page load
    window.onload = function() {
        const storedColor = localStorage.getItem('backgroundColor');
        const storedTextSize = localStorage.getItem('textSize');
        const storedTheme = localStorage.getItem('theme');

        if (storedColor) {
            document.body.style.backgroundColor = storedColor;
        }
        if (storedTextSize) {
            document.body.style.fontSize = storedTextSize;
        }
        if (storedTheme === 'light') {
            document.body.style.backgroundColor = '#ffffff';
            document.body.style.color = '#000000';
        } else if (storedTheme === 'dark') {
            document.body.style.backgroundColor = '#2c2f33';
            document.body.style.color = '#ffffff';
        }

        const welcomeMessage = `Welcome back! Your saved settings have been applied.`;
        document.getElementById('welcomeMessage').innerText = welcomeMessage;

        // Show the Account section by default
        showSection('accountSection');
    };
  </script>
</body>
</html>
